<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/list_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/medium_padding_margin"
        android:layout_marginRight="@dimen/medium_padding_margin"
        android:layout_marginTop="@dimen/medium_padding_margin"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        android:textStyle="bold"
        tools:text="@string/songs_text" />

    <!-- Indicate that this is the grid to be used by the custom Adapter.
     Set the number of columns dynamically based on the screen size-->
    <GridView
        android:id="@+id/grid"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:numColumns="@integer/column_count"
        android:stretchMode="columnWidth" />

</LinearLayout>