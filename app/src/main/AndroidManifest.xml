<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.android.musicplayer">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity" android:label="@string/library_text">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".NowPlayingActivity"
            android:screenOrientation="portrait"
            android:label="@string/now_playing_text" >
        <!-- Declare parent activity for back navigation -->
        <meta-data
            android:name="android.support.PARENT_ACTIVITY"
            android:value="com.example.android.musicplayer.MainActivity" />
        </activity>
        <activity
            android:name=".ArtistActivity"
            android:label="@string/artists_text" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.android.musicplayer.MainActivity" />
        </activity>
        <activity
            android:name=".AlbumActivity"
            android:label="@string/albums_text" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.android.musicplayer.MainActivity" />
        </activity>
    </application>

</manifest>